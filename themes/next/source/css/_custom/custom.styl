@media screen and (min-width:750px) {

    body {
		background-repeat: no-repeat;
		background-attachment:fixed;
		background-position:50% 50%;
		background-size: 100% 100%;
		background-color: #000;
		color: #fff;
    }

	code {
		background: #f90;
		color: #000;
	}

	blockquote {
		border-left: 4px solid #f90;
	}

    #footer a {
		color:#eee;
	}
}
+mobile() {
